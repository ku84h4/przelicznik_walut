<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity"
    android:background="#e9d207"
    android:layout_span="1"
    android:stretchColumns="2"
    >

    <TableRow android:layout_width="match_parent"
        >


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Przelicznik"
            android:layout_column="0"
            android:onClick="przelicznik"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wiadomości"
            android:id="@+id/button2"
            android:layout_column="1"
            android:onClick="wiadomosci"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historia"
            android:id="@+id/button3"
            android:layout_column="1"
            android:onClick="historia"/>
    </TableRow>




    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        tools:context=".MainActivity"
        android:background="#e9d207">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/textViewChooseBase"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FF000000"
                    android:text="Wybierz walutę"
                    />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:background="#e9d207"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <Spinner
                    android:id="@+id/base"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:layout_weight="1"
                    android:clickable="true"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <EditText
                    android:id="@+id/text2"
                    android:background="#e9d207"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:hint="Wpisz kwotę w gwiezdnych monetach"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:ems="10"
                    />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/textViewChoose"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FF000000"
                    android:text="Wybierz walutę"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:background="#e9d207"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <Spinner
                    android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:layout_weight="1"
                    android:clickable="true"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:id="@+id/textwiev"
                    android:background="#e9d207"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"

                    android:ems="10"
                    />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/count"
                    android:background="#808080"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="PRZELICZ"
                    android:onClick="PressButton"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <Button
                    android:id="@+id/exit"
                    android:background="#808080"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="EXIT"
                    android:onClick="exit"/>
            </TableRow>
</TableLayout>
</TableLayout>